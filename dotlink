#!/usr/bin/python3

import json

# check arguments for task
    # if invalid args, fail
    # else execute task
        # check validity of structured data
            # if invalid file, fail
    

def main():
    json_file = open('test_data.json')
    repos = json.load(json_file)['dotdirs']

    # iterate through dotfile repo
    for repo in repos:
        print(repo['location'])
        
        # iterate through each target location
        for target in repo['contents']:
            print('\t' + target['directory'])
            
            # iterate throgh each file
            for dotfile in target['files']:
                print('\t\t' + dotfile['name'])
        
    return repos



# run main if executed as command
if __name__ == '__main__':
    main()
